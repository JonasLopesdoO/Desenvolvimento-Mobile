<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.ufc.trabalho3">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".DownloadServiceActivity">
        </activity>

        <service
                android:name=".ServiceBroadcast.ServiceBroadcastTeste.ServicoTeste"
                android:exported="false">
            <intent-filter>
                <action android:name="SERVICO_TEST"/>
            </intent-filter>
        </service>
        <service
                android:name=".ServiceBroadcast.ServiceBroadcastTeste.IntentServiceTeste"
                android:exported="false">
            <intent-filter>
                <action android:name="SERVICO_INTENT_TEST"/>
            </intent-filter>
        </service>
        <service
                android:name=".ServiceBroadcast.ServiceDownloadQuestao1"
                android:exported="false">
            <intent-filter>
                <action android:name="SERVICO_DOWNLOAD"/>
            </intent-filter>
        </service>
        <service
                android:name=".ServiceBroadcast.IntentServiceDownloadQuestao2"
                android:exported="false">
            <intent-filter>
                <action android:name="SERVICO_INTENT_DOWNLOAD"/>
            </intent-filter>
        </service>

        <service
                android:name=".ServiceBroadcast.ServiceMusicaQuestao3"
                android:exported="false">
            <intent-filter>
                <action android:name="SERVICO_MUSICA"/>
            </intent-filter>
        </service>

        <service
                android:name=".ServiceBroadcast.ServiceQuestao6"
                android:exported="false">
            <intent-filter>
                <action android:name="SERVICO_BROADCAST"/>
            </intent-filter>
        </service>

        <receiver android:name=".ServiceBroadcast.BroadcastQuestao6">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".ServiceBroadcast.ServiceBroadcastTeste.BroadcastTest">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>



        <activity android:name=".DownloadIntentServiceActivity">
        </activity>
        <activity android:name=".MusicaServiceActivity">
        </activity>
        <activity android:name=".Explicacao1e2Activity">
        </activity>
        <activity android:name=".BroadcastServiceActivity">
        </activity>
    </application>

</manifest>